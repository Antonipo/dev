<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='teacher_college_action' model='ir.actions.act_window'>
        <field name="name">College Teacher</field>
        <field name="res_model">college.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="College Teacher" id="teacher_college_menu" parent="college_base_menu" action="teacher_college_action"/>

    <!-- Form View -->
    <record id="teacher_college_view_form" model="ir.ui.view">
        <field name="name">College Teacher Form</field>
        <field name="model">college.teacher</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="contract_date"/>
                    </group>
                    <group>
                        <field name="time_working"/>
                        <field name="defined_contract"/>
                        <field name="last_modification"/>
                        <button name="calculate_today" string="today" type="object"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

     <!-- Tree(list) View -->
    <record id="teacher_college_view_tree" model="ir.ui.view">
        <field name="name">College Teacher List</field>
        <field name="model">college.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="contract_date"/>
            </tree>
        </field>
    </record>

</odoo>